<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <!--android:text="【单选】"-->
    <TextView
        android:id="@+id/tv_ansert_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【单选】"
        android:textColor="#333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:text="qqqqqqqqqqqqqqqqqqqqqqqqqqqq"
        android:textColor="#54371b"
        android:textSize="12sp"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/fl_img"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yunke_ans_img_bg"
        android:visibility="visible">

        <uk.co.senab.photoview.PhotoView
            android:id="@+id/img_question"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yunke_ans_img_above" />

    </FrameLayout>

    <EditText
        android:id="@+id/tiankong"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/yunke_rect_efbf84"
        android:gravity="top"
        android:hint="请输入答案，不能超过12个字..."
        android:padding="6dp"
        android:textColor="#000000"
        android:textColorHint="#c7c5c5"
        android:textSize="13sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_true_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/yunke_answer_card_teacher" />

        <TextView
            android:id="@+id/tv_true_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/yunke_answer_card_box"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#58b4fd"
            android:textSize="13sp" />


    </LinearLayout>

</LinearLayout>
