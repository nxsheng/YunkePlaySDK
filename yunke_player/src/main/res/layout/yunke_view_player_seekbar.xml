<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yunke.player.widget.PlayerProgressBar
        android:id="@+id/player_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:progress="0"
        android:progressDrawable="@drawable/yunke_video_seekbar_progress"
        app:yunke_Player_Point_Height="3dp"
        app:yunke_Player_Point_Width="3dp"
        app:yunke_Player_Student_Point_Background="#94EEFA"
        app:yunke_Player_Teacher_Point_Background="#F6E95A" />

    <com.yunke.player.widget.NoPaddingSeekBar
        android:id="@+id/player_seekbar_thumb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:progress="0"
        android:progressDrawable="@drawable/yunke_video_seekbar_thumb"
        android:thumb="@drawable/yunke_video_progress_btn_selector"
        android:thumbOffset="0dp" />
</FrameLayout>